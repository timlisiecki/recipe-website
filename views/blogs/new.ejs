<% include ../partials/header %>

<div class="container">
    <div class="row well">
        <h1 style="text-align: center;">Create New Blog</h1>
        <div style="width: 30%; margin: 25px auto; ">
            <form action="/recipes" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Recipe Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="subname" placeholder="with ...">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Paste Image Address">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5" name="content" placeholder="Insert Blog here ..."></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a class="btn btn-primary btn-large" href="/recipes">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>